syntax extension jsonlikeql_syntax {
	
rule <class> {
	$identifier$ ?* ${$
		repeat
			<class_property>
		while
		$,$
		end
	$}$
}

rule <class_property> {

	$identifier$ ?* $:$

	@type propertyType = @type.default
	<class_property_type> !? propertyType
}

rule <class_property_type> ?!@type propertyType{
	
	select 
		<primitive_name> !? propertyType
	or
		$identifier$ ?*

		# on cherche le type dans la table des classes enregistr√©es

		propertyType = @type.default
	end
}
	
}

